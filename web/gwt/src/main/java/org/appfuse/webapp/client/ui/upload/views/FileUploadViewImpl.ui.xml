<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

<g:HTMLPanel>
	<b:Column size="3">
		<b:Heading size="2" text="{i18n.upload_heading}" />
		<b:Paragraph><ui:text from="{i18n.upload_message}" /></b:Paragraph>
	</b:Column>
	<b:Column size="7">
		<g:FlowPanel ui:field="errorsPanel" />
		<b:WellForm ui:field="form" type="HORIZONTAL" action="app/fileupload" method="POST" encoding="multipart/form-data">
			<b:ControlGroup ui:field="nameControlGroup">
				<b:ControlLabel><span class="required">*</span> <ui:text from="{i18n.uploadForm_name}" />:</b:ControlLabel>
				<b:Controls>
					<b:TextBox ui:field="name" name="name" controlGroup="{nameControlGroup}" errorLabel="{nameErrors}" />
					<b:HelpInline ui:field="nameErrors" />
				</b:Controls>			
			</b:ControlGroup>
			<b:ControlGroup ui:field="fileControlGroup">
				<b:ControlLabel><span class="required">*</span> <ui:text from="{i18n.uploadForm_file}" />:</b:ControlLabel>
				<b:Controls>
					<b:FileUpload ui:field="file" name="file" controlGroup="{fileControlGroup}" errorLabel="{fileErrors}"/>
					<b:HelpInline ui:field="fileErrors" />
				</b:Controls>			
			</b:ControlGroup>

			<b:FormActions>
				<b:SubmitButton ui:field="upload" text="{i18n.button_upload}" />
				<b:SubmitButton ui:field="cancel" text="{i18n.button_cancel}" />
			</b:FormActions>
		</b:WellForm>
	</b:Column>
</g:HTMLPanel>
</ui:UiBinder>
