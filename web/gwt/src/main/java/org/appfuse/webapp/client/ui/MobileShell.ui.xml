<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:nav="urn:import:org.appfuse.webapp.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

	<g:HTMLPanel>
		<g:NotificationMole animationDuration="0" message="loading..." ui:field="mole"></g:NotificationMole>
   		
   		<nav:DesktopNavigationBar />
		
		
		<div class="container-fluid">
			<g:SimplePanel  ui:field="messages"/>
			
			<g:SimplePanel styleName="row-fluid" ui:field="contentsPanel" />
		</div>
	
	    <div id="footer">
	        <span class="left"><ui:text from="{i18n.webapp_version}"/> <span id="currentUserInfo">| USER XXX</span></span>
	        <span class="right">
	            <ui:text from="{i18n.copyright_year}"/> <a href="{i18n.company_url}"><ui:text from="{i18n.company_name}"/></a>
	        </span>
	    </div>	
	</g:HTMLPanel>
</ui:UiBinder>
