    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>AppFuse Core Application</name>
    <url>http://www.mycompany.com</url>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

